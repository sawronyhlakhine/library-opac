doctype html
html(lang="en")
	head
		meta(charset="utf-8")

		title Library books

		meta(name="viewport" content="width=device-width, initial-scale=1.0")
		meta(name="apple-mobile-web-app-title" content="Library books")
		meta(name="application-name" content="Library books")
		meta(name="msapplication-TileColor" content="#2d89ef")
		meta(name="msapplication-TileImage" content="/mstile-144x144.png")
		meta(name="theme-color" content="#ffffff")

		link(rel="stylesheet" type="text/css" href="https://unpkg.com/bootswatch@5.3.1/dist/sandstone/bootstrap.min.css")
		link(rel="stylesheet" type="text/css" href="https://unpkg.com/simple-datatables@8.0.0/dist/style.css")
		link(rel="stylesheet" type="text/css" href="https://unpkg.com/@fortawesome/fontawesome-free@6.4.2/css/fontawesome.min.css")
		link(rel="stylesheet" type="text/css" href="https://unpkg.com/@fortawesome/fontawesome-free@6.4.2/css/solid.min.css")

		link(rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png")
		link(rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png")
		link(rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png")
		link(rel="manifest" href="/manifest.json")
		link(rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5")
		link(rel="stylesheet" href="/css/site.css")

	body

		block nav
			- var active = "index"

		nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
			.container
				button.navbar-toggler(type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor03" aria-controls="navbarColor03" aria-expanded="false" aria-label="Toggle navigation")
					span.navbar-toggler-icon

				div#navbarColor03.collapse.navbar-collapse
					ul.navbar-nav.me-auto
						li.nav-item
							a(class=(active === "index" ? "nav-link active" : "nav-link"), href="/") Home
							if active === "index"
								span.visually-hidden (current)

		.container

			block content


		script(src="https://unpkg.com/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" type="text/javascript" crossorigin="anonymous")
		script(src="https://unpkg.com/simple-datatables@8.0.0/dist/umd/simple-datatables.js" type="text/javascript")
		//- script(src="/js/site.js")

		block scripts
